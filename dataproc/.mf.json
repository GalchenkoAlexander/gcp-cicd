{
  "bucket": "gcp-cicd-artifacts",
  "repository": "gcp-cicd",
  "components": {
    "dataproc-init-actions": {
      "type": "init-actions",
      "assets": [
        {
          "glob": "./init-actions/*.sh"
        }
      ]
    },
    "dataproc-custom-image": {
      "type": "custom-image",
      "assets": [
        {
          "glob": "./custom-image/*"
        }
      ]
    },
    "dataproc-auto-scaling": {
      "type": "auto-scaling",
      "assets": [
        {
          "glob": "./auto-scaling/*.yaml"
        }
      ]
    },
    "dataproc-history-server": {
      "type": "history-server",
      "assets": [
        {"glob": "./history-server/cluster-templates/*.yaml"},
        {"glob": "./init-actions/disable-history-servers.sh"},
        {"glob": "./history-server/setup-dataproc-history-server.sh"}
      ]
    }
  }
}
